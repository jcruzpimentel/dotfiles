# Ghostty Terminal Configuration
# Cross-platform config for macOS, Linux, and Windows

# Font Configuration
font-family = FantasqueSansM Nerd Font
font-size = 19

# Window Configuration
window-padding-x = 10
window-padding-y = 10
window-decoration = true
background-opacity = 0.90
background-blur-radius = 20

# Initial window size (columns x rows)
window-width = 120
window-height = 30

# Theme Configuration
# To change themes, uncomment one of the themes below:
theme = catppuccin-mocha
# theme = zenbones-zenwritten-dark

# Cursor style
cursor-style = block
cursor-style-blink = true

# Shell Configuration
# macOS/Linux: uses login shell
shell-integration = zsh
shell-integration-features = cursor,sudo,title

# Scrollback
scrollback-limit = 100000

# Mouse
mouse-hide-while-typing = true
copy-on-select = true

# Clipboard
clipboard-read = allow
clipboard-write = allow

# Keybindings
# Note: Ghostty uses different keybind syntax than Alacritty
# Common keybindings are built-in and work as expected

# macOS specific
macos-option-as-alt = true
macos-titlebar-style = native

# Performance
resize-overlay = never
unfocused-split-opacity = 0.8

# Advanced
confirm-close-surface = false
quit-after-last-window-closed = false
keybind = shift+enter=text:\x1b\r
