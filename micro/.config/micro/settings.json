{
    "autosu": false,
    "colorscheme": "zenbones",
    "cursorline": true,
    "diffgutter": true,
    "ignorecase": true,
    "keepautoindent": true,
    "matchbrace": true,
    "matchbracestyle": "underline",
    "mkparents": true,
    "ruler": true,
    "savecursor": true,
    "saveundo": true,
    "scrollbar": true,
    "scrollmargin": 3,
    "scrollspeed": 2,
    "smartpaste": true,
    "softwrap": false,
    "splitright": true,
    "statusformatl": "$(filename) $(modified)($(line),$(col)) $(status.paste)| ft:$(opt:filetype) | $(opt:fileformat) | $(opt:encoding)",
    "statusformatr": "$(bind:ToggleKeyMenu): bindings, $(bind:ToggleHelp): help",
    "syntax": true,
    "tabmovement": true,
    "tabsize": 4,
    "tabstospaces": true,
    "useprimary": true
}
