# SSH Configuration
# Managed by dotfiles

# Include machine-specific configuration
Include ~/.ssh/config.local

# Shared SSH host configurations go below
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519

Host truenas
    HostName 10.10.10.253
    User truenas_admin
    ForwardAgent yes
    SetEnv TERM=xterm-256color
    # Uncomment and set your SSH key if needed:
    # IdentityFile ~/.ssh/id_ed25519

# Common settings for all hosts
Host *
    AddKeysToAgent yes
    UseKeychain yes
    IdentitiesOnly yes
